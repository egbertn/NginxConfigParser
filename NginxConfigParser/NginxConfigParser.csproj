<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Authors>Passingwind,egbert_nierop</Authors>
        <Version>0.1.4</Version>
        <ImplicitUsings>enable</ImplicitUsings>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/jxnkwlp/NginxConfigParser</PackageProjectUrl>
        <RepositoryUrl>https://github.com/egbertn/NginxConfigParser</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <PackageTags>nginx, conf</PackageTags>
        <IncludeXmlDocumentation>true</IncludeXmlDocumentation>

        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>A .net 6 library for reading and writing nginx configuration files.</Description>
        <PackageId>NCV.NginxConfigParser</PackageId>
        <PackageReleaseNotes>
            Performance optimizations
        </PackageReleaseNotes>
        <Copyright>Passingwind</Copyright>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DocumentationFile>bin\NginxConfigParser.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Link="README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
